<!--pages/home-music/index.wxml-->
<view>
  <!-- <van-search placeholder="搜索你喜欢的歌曲"></van-search> -->
  <input class="input" bindconfirm="bindconfirm" bindfocus="handleSearchClick" placeholder="搜索你喜欢的歌曲"/>
</view>
<swiper class="swiper" style="height: {{swiperHeight}}px;" interval="{{3000}}" indicator-dots autoplay circular indicator-active-color="#ccc">
    <block wx:for="{{banners}}" wx:key="bannerId">
      <swiper-item class="swiper-item">
        <image class="swiper-image" bindload="imageLoad" src="{{item.pic}}" mode="widthFix"></image>
      </swiper-item>
    </block>
  </swiper>
  <!-- 推荐歌曲 -->
  <view class="recommend-song">
  <area-header title="推荐歌曲" bind:click="handleMoreClick"></area-header>
  <view class="song-list">
    <block wx:for="{{recommendSongs}}" wx:key="id">
      <song-item-v1 item="{{item}}"></song-item-v1>
    </block>
  </view>
</view>

<!-- 4.热门/推荐歌单 -->
<song-menu-area title="热门歌单" 
                songMenu="{{hotSongMenu}}"
                wx:if="{{hotSongMenu.length > 0}}">
</song-menu-area>
<song-menu-area title="推荐歌单" 
                songMenu="{{recommendSongMenu}}"
                wx:if="{{recommendSongMenu.length > 0}}">
</song-menu-area>

<!-- 5.巅峰榜 -->
<view class="ranking">
  <area-header title="巅峰榜" showRight="{{false}}"></area-header>
  <view class="ranking-list">
    <block wx:for="{{rankings}}" wx:key="name">
      <ranking-area-item item="{{item}}"
                          bindtap="handleRankingItemClick"
                         data-idx="{{index}}"></ranking-area-item>
    </block>
  </view>
</view>
